@model sheduler.Models.Event
<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Vertically Centered Modal -->
    <div class="col-lg-4 col-md-6">
        <div class="mt-3">
            <button type="button"
                    class="btn btn-primary mb-3"
                    data-bs-toggle="modal"
                    data-bs-target="#modalCenter">

                SHEDULE TRAVEL PLANS
            </button>
            <div class="modal fade in" id="modalCenter" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalCenterTitle">#</h5>
                            <button type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                        </div>
                        @using (Html.BeginForm("Create", "Events", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="card md-12">
                                            <h5 class="card-header">SHEDULE TRAVEL PLAN</h5>
                                            @*<H5 class=" card-header text-danger"> THIS FEATURE IS UNDER DEVELOPMENT</H5>*@
                                            <div class="card-body demo-vertical-spacing demo-only-element">
                                                
                                                <small class="text-light fw-semibold d-block">
                                                    @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label  " })
                                                </small>

                                                <div class="input-group ">
                                                    @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control col-xs-4" } })
                                                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })

                                                </div>

                                                <small class="text-light fw-semibold d-block pt-3">
                                                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label " })

                                                </small>

                                                <div class="input-group ">
                                                    <textarea class="form-control  " name="Description" id="exampleFormControlTextarea1" rows="5 "></textarea>
                                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

                                                </div>

                                                <small class="text-light fw-semibold d-block pt-3">
                                                    @Html.LabelFor(model => model.Start, htmlAttributes: new { @class = "control-label " })
                                                </small>
                                                <div class="input-group ">
                                                    @Html.EditorFor(model => model.Start, new { htmlAttributes = new { @class = "form-control ", id = "datepicker" } })
                                                    @Html.ValidationMessageFor(model => model.Start, "", new { @class = "text-danger" })
                                                </div>
                                                <small class="text-light fw-semibold d-block pt-3">
                                                    @Html.LabelFor(model => model.End, htmlAttributes: new { @class = "control-label " })
                                                </small>

                                                <div class="input-group ">
                                                    @Html.EditorFor(model => model.End, new { htmlAttributes = new { @class = "form-control col-xs-4", id = "datepicker" } })
                                                    @Html.ValidationMessageFor(model => model.End, "", new { @class = "text-danger" })
                                                </div>

                                                <small class="text-light fw-semibold d-block pt-3">
                                                    @Html.LabelFor(model => model.ThemeColor, htmlAttributes: new { @class = "control-label " })
                                                </small>
                                                <div class="input-group ">
                                                    <div class="form-group">
                                                        <label>Theme Color</label>
                                                        <select id="ddThemeColor" class="form-control" name="ThemeColor">
                                                            <option value="">Default</option>
                                                            <option value="red">Red</option>
                                                            <option value="blue">Blue</option>
                                                            <option value="black">Black</option>
                                                            <option value="green">Green</option>
                                                        </select>
                                                    </div>
                                                    @Html.ValidationMessageFor(model => model.ThemeColor, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.IsFullDay, htmlAttributes: new { @class = "control-label " })
                                                    <div class="col-md-10">
                                                        <div class="checkbox">
                                                            @Html.EditorFor(model => model.IsFullDay)
                                                            @Html.ValidationMessageFor(model => model.IsFullDay, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>


                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                    Close
                                </button>
                                <input type="submit" class="btn btn-primary" value="Save changes">
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(window).on('load', function () {
            $('#modalCenter').modal('show');
        });
    </script>
</div>