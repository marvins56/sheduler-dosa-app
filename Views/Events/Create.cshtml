@model sheduler.Models.Event




@{
    if (Session["userid"] != null)
    {

        <div class="container-xxl flex-grow-1 container-p-y">

            <div class="row mb-5">
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card">
                        <div class="card-header">SHEDULE TRAVEL PLAN</div>
                        <div class="card-body">

                            <p class="card-text">
                                Click button incase modal does not apear
                            </p>
                            <button type="button"
                                    class="btn btn-primary"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalCenter">

                                SHEDULE TRAVEL PLAN
                            </button>




                        </div>
                    </div>
                </div>
            </div>
            <!-- Vertically Centered Modal -->
            <div class="col-lg-4 col-md-6">

                <div class="mt-3">

                    <div class="modal fade in" id="modalCenter" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modalCenterTitle">#</h5>
                                    <button type="button"
                                            class="btn-close"
                                            data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                </div>
                                @using (Html.BeginForm("Create", "Events", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="modal-body ">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="card mb-4">
                                                    <h5 class="card-header">ADD TRAVEL SHEDULE</h5>
                                                    <div class="card-body demo-vertical-spacing demo-only-element">
                                                        <div class="form-group">
                                                            <small class="text-light fw-semibold d-block pt-3">
                                                                @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label " })
                                                            </small>

                                                            <div>
                                                                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <small class="text-light fw-semibold d-block pt-3">

                                                                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label " })
                                                            </small>

                                                            <div>
                                                                <textarea class="form-control" name="Description"></textarea>
                                                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <small class="text-light fw-semibold d-block pt-3">
                                                                @Html.LabelFor(model => model.Start, htmlAttributes: new { @class = "control-label " })
                                                            </small>
                                                            <div>
                                                                @Html.EditorFor(model => model.Start, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.Start, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <small class="text-light fw-semibold d-block pt-3">
                                                                @Html.LabelFor(model => model.End, htmlAttributes: new { @class = "control-label " })
                                                            </small>
                                                            <div>
                                                                @Html.EditorFor(model => model.End, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.End, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>
                                                        <div class="form-check">
                                                            <input type="checkbox" class="form-check-input" id="exampleCheck1" name="IsFullDay">
                                                            <label class="form-check-label" for="exampleCheck1">SET FULL DAY</label>
                                                        </div>
                                                        <div class="form-group">

                                                            <label for="inputState">State</label>
                                                            <select id="inputState" class="form-control" name="ThemeColor">
                                                                <option selected>Choose Color</option>
                                                                <option value="green">green</option>
                                                                <option value="orange">orange</option>
                                                                <option value="blue">blue</option>
                                                                <option value="Gray">Gray</option>
                                                                <option value="yellow">yellow</option>
                                                                <option value="pink">pink</option>
                                                            </select>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                            Close
                                        </button>
                                        <a href="@Url.Action("Index","Events")" class="btn btn-outline-secondary">  Back</a>

                                        <input type="submit" class="btn btn-primary" value="Save changes">
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script type="text/javascript">
                $(window).on('load', function () {
                    $('#modalCenter').modal('show');
                });
            </script>
        </div>
    }
    else
    {
        <script>
            swal({
                title: "NOT AUTHORISED",
                text: "ACCESSDE DENIED",
                icon: "error"
            });</script>

    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}