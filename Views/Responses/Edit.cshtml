@model sheduler.Models.Response

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/adminlayout.cshtml";
}

@{
    if (Session["userid"] != null)
    {
    
        <div class="container-xxl flex-grow-1 container-p-y">

            <div class="row mb-5">
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card">
                        <div class="card-header">RESPONSE CENTER</div>
                        <div class="card-body">

                            <p class="card-text">
                                Click button incase modal does not apear
                            </p>
                            <button type="button"
                                    class="btn btn-primary"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalCenter">

                                MAKE CHANGES TO RESPONSE
                            </button>
                        </div>
                    </div>
                </div>
            </div>





            <!-- Vertically Centered Modal -->
            <div class="col-lg-4 col-md-6">

                <div class="mt-3">

                    <div class="modal fade in" id="modalCenter" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modalCenterTitle">#</h5>
                                    <button type="button"
                                            class="btn-close"
                                            data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                </div>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.ResponseId)
                                    <div class="modal-body " >
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="card mb-4">
                                                    <h5 class="card-header">RESPONSE CENTER</h5>
                                                    <div class="card-body demo-vertical-spacing demo-only-element">
                                                        <small class="text-light fw-semibold d-block">SELECT INQUIRY</small>

                                                        <div class="form-group ">
                                                            @Html.DropDownList("Inquirery_id", null, htmlAttributes: new
                                                            {
                                                                @class = "form-select",
                                                                id = "exampleFormControlSelect1",@*aria-label = "Default select example"*@})
                                                            @Html.ValidationMessageFor(model => model.Inquirery_id, "", new { @class = "text-danger" })

                                                        </div>
                                                        <small class="text-light fw-semibold d-block">
                                                            @Html.LabelFor(model => model.Response1, htmlAttributes: new { @class = "control-label " })
                                                        </small>

                                                        <div class="form-group ">
                                                            <textarea class="form-control" name="Response1" id="exampleFormControlTextarea1" rows="5 "></textarea>

                                                            @Html.ValidationMessageFor(model => model.Response1, "", new { @class = "text-danger" })
                                                        </div>

                                                        <div class="form-group">
                                                        <small class="text-light fw-semibold d-block pt-3">
                                                            @Html.LabelFor(model => model.DatetimeOfReply, htmlAttributes: new { @class = "control-label" })

                                                        </small>

                                                        <div class="form-group">
                                                            @Html.EditorFor(model => model.DatetimeOfReply, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.DatetimeOfReply, "", new { @class = "text-danger" })

                                                        </div>
                                                       </div>
                                                    </div>
                                                </div>
                                            </div>


                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                            Close
                                        </button>
                                        <input type="submit" class="btn btn-primary" value="Save changes">
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script type="text/javascript">
                $(window).on('load', function () {
                    $('#modalCenter').modal('show');
                });
            </script>
        </div>
    }
    else
    {
        <script>
            swal({
                title: "NOT AUTHORISED",
                text: "ACCESSDE DENIED",
                icon: "error"
            });</script>

    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}