@model sheduler.Models.Response

@{
    ViewBag.Title = "Details";
}
<div class="container-xxl flex-grow-1 container-p-y">

    <div class="modal fade in" id="modalScrollable" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalScrollableTitle">Modal title</h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Response1)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Response1)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.DatetimeOfReply)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DatetimeOfReply)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Inquiry.inquirry)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Inquiry.inquirry)
                        </dd>

                    </dl>
                </div>
                <div class="modal-footer">
                    <a href="@Url.Action("Index","Responses")" class="btn btn-outline-secondary">  Back</a>
                <a href="@Url.Action("Edit","Responses")" class="btn btn-primary">  Edit</a>

                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
        $(window).on('load', function () {
            $('#modalScrollable').modal('show');
        });
</script>